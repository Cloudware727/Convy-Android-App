<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Sign-Up Box -->

    <ImageView
        android:id="@+id/coffee_machine_icon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="88dp"
        android:scaleType="centerInside"
        android:src="@drawable/convy_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_rounded_box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/login_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@null"
            android:text="Sign Up to Convy"
            android:inputType="text"
            android:textSize="20sp"
            android:letterSpacing="0.1"
            android:padding="12dp"
            android:textColor="#4B2E1E"
            android:textColorHint="#8D6E63" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/et_signup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text_box"
            android:hint="Username"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#4B2E1E"
            android:textColorHint="#8D6E63"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/et_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text_box"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#4B2E1E"
            android:textColorHint="#8D6E63"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/et_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text_box"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#4B2E1E"
            android:textColorHint="#8D6E63"/>

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/et_signup_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text_box"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#4B2E1E"
            android:textColorHint="#8D6E63"/>

        <!-- Sign-Up Button -->
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <!-- Back to Login -->
        <TextView
            android:id="@+id/tv_back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Already have an account? Login"
            android:textColor="#4B2E1E"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
